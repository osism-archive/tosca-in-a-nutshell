[kubernetes]
name=kubernetes
baseurl={{KUBE_YUM_REPO}}
enabled=1
gpgcheck=1
repo_gpgcheck=1
gpgkey={{KUBE_YUM_REPO_GPG_KEYS}}
{% if ansible_env['HTTP_PROXY'] is defined %}
proxy={{ansible_env['HTTP_PROXY']}}
{%elif ansible_env['http_proxy'] is defined %}
proxy={{ansible_env['http_proxy']}}
{%endif%}