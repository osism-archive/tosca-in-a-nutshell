[Unit]
Description=Yorc service discovery agent
Requires=network-online.target
After=network.target

[Service]
Environment="HTTP_PROXY={% if ansible_env['HTTP_PROXY'] is defined %}{{ansible_env['HTTP_PROXY']}}{%elif ansible_env['http_proxy'] is defined %}{{ansible_env['http_proxy']}}{%endif%}"
Environment="HTTPS_PROXY={% if ansible_env['HTTPS_PROXY'] is defined %}{{ansible_env['HTTPS_PROXY']}}{%elif ansible_env['https_proxy'] is defined %}{{ansible_env['https_proxy']}}{%endif%}"
Environment="http_proxy={% if ansible_env['HTTP_PROXY'] is defined %}{{ansible_env['HTTP_PROXY']}}{%elif ansible_env['http_proxy'] is defined %}{{ansible_env['http_proxy']}}{%endif%}"
Environment="https_proxy={% if ansible_env['HTTPS_PROXY'] is defined %}{{ansible_env['HTTPS_PROXY']}}{%elif ansible_env['https_proxy'] is defined %}{{ansible_env['https_proxy']}}{%endif%}"
# Truncating list of proxies if needed as systemd has a maximum of 2048 chars per line
Environment="NO_PROXY={% if ansible_env['NO_PROXY'] is defined %}{{ansible_env['NO_PROXY']|truncate(2028)}}{%elif ansible_env['no_proxy'] is defined %}{{ansible_env['no_proxy']|truncate(2028)}}{%endif%}"
Environment="YORC_VAULT_TOKEN="
User=yorc
Group=yorc
Restart=on-failure
ExecStart={{INSTALL_DIR}}/yorc server -c {{CONFIG_DIR}}/config.yorc.yaml
KillSignal=SIGINT
TimeoutStopSec=360
WorkingDirectory=/var/yorc

[Install]
WantedBy=multi-user.target
